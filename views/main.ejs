<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Among Us!</title>
    <link rel="stylesheet" href="./styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="icon" href="./favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

 </head>
  <body class="bg-black text-white">
      <% for(let i=0; i<170; i++) { %>
        <div class="star" style="top: <%= Math.random()*100 %>vh; left: <%= Math.random()*100 %>vw; animation-duration: <%= Math.random()*5+1 %>s;"></div>
    <% } %>

      
    <div >
      
     <%- include("./logo.ejs") %>
     <div class="max-md:px-8">
     <form class="px-5 flex flex-col justify-center items-center" action="/reg" method="post" id="slotForm">
     <div class="mt-16 max-md:mt-24 max-md:ml-8">
          
            <div class=" flex flex-col p-5 gap-5">
              <label for="name" class="text-5xl max-md:text-4xl">What is your <strong>Name</strong> </label>
              <div class="text-2xl max-md:text-xl">( a.k.a the username your parents gave you )</div>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="enter your full name"
                autocomplete="off"
                class="border-0 p-1 text-3xl max-md:text-xl border-b-4 text-[#F24555A1] placeholder:text-[#F24555A1] focus:outline-none bg-black border-[#F24555]"
              />
              <button type="submit" class="button-54 rounded-xl  bg-[#F24645] shadow-[#942336]"><div class="text-white">Next</div></button>
            </div>
          </div>
        </div>
      </form>
      </div>
    </div>
    <script>
  
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("name").focus();
  });
</script>
  </body>
</html>
