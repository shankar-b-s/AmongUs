<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Among Us! </title>
    <link rel="stylesheet" href="./styles.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./favicon.png">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-black text-white">
     <% for(let i=0; i<170; i++) { %>
        <div class="star" style="top: <%= Math.random()*100 %>vh; left: <%= Math.random()*100 %>vw; animation-duration: <%= Math.random()*5+1 %>s;"></div>
    <% } %>
    <%- include("./logo.ejs") %>
    <form action="/name" class=" px-5 flex flex-col justify-center items-center" method="post" id="slotForm">
      <div class="mt-16 max-md:mt-24">
        <div class=" mt-8 flex flex-col gap-12  px-8 ">
            <div><img  src="./Welcome to.png" alt=""></div>
            <div><img  src="./Among.png" alt=""></div>            
          
            <div class="justify-center mx-auto"> <button class="button-54  rounded-full  bg-[#F24645] shadow-[#942336]" type="submit"><div class="text-white">Start</div></button></div>
        </div>
      
    </form>

  </body>
</html>
