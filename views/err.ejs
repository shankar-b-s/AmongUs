<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="text-white bg-black">
    <% for(let i=0; i<170; i++) { %>
    <div
      class="star"
      style="
        top: <%= Math.random() * 100 %>vh;
        left: <%= Math.random() * 100 %>vw;
        animation-duration: <%= Math.random() * 5+1 %>s;
      "
    ></div>
    <% } %> <%- include("logo.ejs") %>
    <form action="/err" method="post">
      <div
        class="p-5 max-md:text-3xl flex mt-20 flex-col justify-center text-5xl items-center text-3xl gap-8"
      >
        <div><%= message1 %></div>
        <div><%= message2 %></div>
        <div><%= message3 %></div>
        <button
          class="button-54 rounded-xl bg-[#F24645] shadow-[#942336]"
          type="submit"
        >
          <div class="text-white">Go Home</div>
        </button>
      </div>
    </form>
  </body>
</html>
